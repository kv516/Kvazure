create table animals(
    id int IDENTITY(1,1) CONSTRAINT pkAnim PRIMARY KEY,
    name VARCHAR(75) NOT NULL,
    scientific_name VARCHAR(75) NOT NULL,
    description VARCHAR(800) NOT NULL,
    image_path VARCHAR(100) NULL
)

insert into animals values('Cat','Felis catus','The cat is a domestic species of small carnivorous mammal. It is the only domesticated species in the family Felidae and is commonly referred to as the domestic cat or house cat to distinguish it from the wild members of the family.','cat.jpeg')
